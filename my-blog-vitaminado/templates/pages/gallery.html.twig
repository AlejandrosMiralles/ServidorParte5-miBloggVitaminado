{% extends 'base.html.twig' %}

{% block title %} Spourmo | Pages | Gallery {% endblock %}

{% block inicio %}
    <div id="breadcrumb" class="hoc clear"> 
        <!-- ################################################################################################ -->
        <h6 class="heading">Gallery</h6>
        <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">Lorem</a></li>
        <li><a href="#">Ipsum</a></li>
        <li><a href="#">Dolor</a></li>
        </ul>
        <!-- ################################################################################################ -->
    </div>
{% endblock %}

{% block body %}
    <div class="wrapper row3">
    <main class="hoc container clear"> 
        <!-- main body -->
        <!-- ################################################################################################ -->
        <div class="content"> 
        <!-- ################################################################################################ -->
        <div id="gallery">
            <figure>

                {{ include ('partials/carousel.html.twig', {'images':images.results})}}
            </figure>

        </div>
        <!-- ################################################################################################ -->
        <!-- ################################################################################################ -->
        <nav class="pagination">
            {% if images.hasToPaginate %}
                <div class="text-left">
                    <ul class="pagination">
                        {% if images.hasPreviousPage %}
                            <li class="prev"><a href="{{ path('gallery', {page: images.previousPage}) }}" rel="previous"><i class="fa fw fa-long-arrow-left"></i> Previous</a></li>
                        {% else %}
                            <li class="prev disabled"><span><i class="fa fw fa-arrow-left"></i> Previous </span></li>
                        {% endif %}

                        {% for i in 1.. images.lastPage %}
                            {% if i == images.currentPage %}
                                <li class="active"><span>{{ i }}</span></li>
                            {% else %}
                                <li><a href="{{ path('gallery', {page: i}) }}">{{ i }}</a></li>
                            {% endif %}
                        {% endfor %}

                        {% if images.hasNextPage %}
                            <li class="next"><a href="{{ path('gallery', {page: images.nextPage}) }}" rel="next">Next <i class="fa fw fa-arrow-right"></i></a></li>
                        {% else %}
                            <li class="next disabled"><span>Next <i class="fa fw fa-arrow-right"></i></span></li>
                        {% endif %}
                    </ul>
                </div>
            {% endif %}
        </nav>
        <!-- ################################################################################################ -->
        </div>
        <!-- ################################################################################################ -->
        <!-- / main body -->
        <div class="clear"></div>
    </main>
    </div>
{% endblock %}