        <div id="comments">
            <h2>Comments</h2>
            <ul>
            {% for post in posts %}
                <li>
                    <article>
                        <header>
                            <figure class="avatar"><img src="{{ asset('images/demo/avatar.png') }}" alt=""></figure>
                            <address>
                                By {{ post.author.name }}
                            </address>
                            <time>{{ post.publishedAt|date("H:i:s d/m/y") }}</time>
                        </header>
                        <div class="comcont">
                            {{ post.content }}
                        </div>
                   </article>
                    <a href="{{ path('fullWidth_postLike', {id: post.id}) }}">LIKE</a> <i class="fa fa-heart sr-icons"></i> {{post.numLikes}}
                
                    <h4>Write a comment!!</h4>
                    {% if app.user %}
                        {{ form_start(commentForm, { 'action': path("fullWidthCheckForms", {'postCommentedId': post.id}) }) }}
                            <div class="my-custom-class-for-errors">
                                {{ form_errors(commentForm) }}
                            </div>

                            <div class="form-control">
                                <input
                                    name="{{ field_name(commentForm.comment) }}"
                                    value="{{ field_value(commentForm.comment) }}"
                                    placeholder="{{ field_label(commentForm.comment) }}"
                                    class="form-control"
                                />
                            </div>
                        {{ form_end(commentForm) }}
                    {% else %}
                        <p>Debes estar logeado para poder comentar en los posts</p>
                    {% endif %}


                </li>
            {% endfor %}
            
