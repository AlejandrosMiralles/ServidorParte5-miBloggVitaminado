{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %} 


    <!-- Cart Start -->
    <div class="container py-5">
        <div class="row g-5">
            <!-- Cart list Start -->
            <div class="col-lg-8">
                {% for item in items %}
                    <div class="blog-item mb-5" id='item-{{item.id}}'>
                        <div class="row g-0 bg-light overflow-hidden">
                            <div class="col-12 col-sm-7 h-100 d-flex flex-column justify-content-center">
                                <div class="itemOnTheCart p-4">
                                    <h3>{{ item.author}}</h3>
                                    <div class="d-flex mb-3">
                                        <p class="text-uppercase border-start border-5 border-primary ps-3 mb-4">{{ item.content }}</p>
                                    </div>
                                    <h5 class="text-uppercase mb-3"></h5>
                                    
                                    <a href="" item-id="{{item.id}}" class="btn btn-primary py-2 px-4 removeProduct">Remove from cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            <!-- Cart list End -->

            <!-- Sidebar Start -->
            <div class="col-lg-4">
                <!-- Plain Text Start -->
                <div>
                    <h3 class="text-uppercase border-start border-5 border-primary ps-3 mb-4">Cart</h3>
                    <div class="bg-light text-center" style="padding: 30px;">
                        <div class="d-flex mb-3">
                                <h4 id="totalCart" class="text-uppercase ps-3 mb-4">Total {{ totalCart }} â‚¬</h4>
                        </div>
                        <a href="{{ path('fullWidth') }}" id="buyPosts" class="btn btn-primary py-2 px-4">Checkout</a>
                    </div>
                </div>
                <!-- Plain Text End -->
            </div>
            <!-- Sidebar End -->
        </div>
    </div>
    <!-- Blog End -->
{% endblock %}