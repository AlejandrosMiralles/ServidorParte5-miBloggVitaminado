{% extends 'base.html.twig' %}

{% block title %} Feedback {% endblock %}

{% block inicio %} {% endblock %}

{% block body %} 
    <h1>Feedback</h1>

    <!-- Form -->
    {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
    {{ form_errors(form) }}
        <div class="form-group">
            <div class="col-xs-6">
                {{ form_row(form.authorName, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_row(form.title, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_row(form.feedback, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_row(form.Send, {'attr': {'class':'pull-right btn btn-lg sr-button'}}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}